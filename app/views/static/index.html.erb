  		</tr>
  		<tr>
  			<td><%= image_tag('user6.png', class:"users_pics") %></td>
  			<td><%= image_tag('user2.png', class:"users_pics") %> </td>
  			<td><%= image_tag('user4.png', class:"users_pics") %></td>
  		</tr>
	</table>
</div>
<div class="row">
	<div class="col-md-12 col-xs-12">
		<footer class="container home_footer">
			<div class="home_footer_inner">
				<a href="byrachelmahan.com">
					<span> &copy; byrachelmahan.com </span>
				</a>
			</div>
		</footer>
	</div>
</div>





